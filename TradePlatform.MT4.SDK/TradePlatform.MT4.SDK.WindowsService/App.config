<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net" />
  </configSections>

  <log4net>

    <appender name="GeneralLog" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="logs/General/generalLog.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] – %message%newline" />
      </layout>
    </appender>

    <appender name="OpenOffer" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="logs/OpenOffer/openOffer.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] – %message%newline" />
      </layout>
    </appender>

    <appender name="SendOrders" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="logs/SendOrder/sendOrder.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] – %message%newline" />
      </layout>
    </appender>

    <appender name="DbOperations" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="logs/db/dbOperations.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] – %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="GeneralLog" />
    </root>

    <logger name="NHibernate" additivity="false">
      <level value="WARN"/>
      <appender-ref ref="GeneralLog"/>
    </logger>

    <logger name="OpenOfferLogger" additivity="false">
      <level value="ALL" />
      <appender-ref ref="OpenOffer" />
    </logger>

    <logger name="SendOrdersLogger" additivity="false">
      <level value="ALL" />
      <appender-ref ref="SendOrders" />
    </logger>

    <logger name="DbOperationsLogger" additivity="false">
      <level value="ALL" />
      <appender-ref ref="DbOperations" />
    </logger>

  </log4net>
  
</configuration>